<%- include('../user/item/head.ejs') %>

    <body class="bg-white">

        <%- include('./item/navbar.ejs') %>

        <form action="" method="post">
            <div class="w-auto h-auto px-4 py-5 mx-2 my-5 rounded-lg md:mx-20 bg-slate-400 md:px-28">
                <h1 class="mb-2 text-lg font-bold text-center">Detail Pesanan Lahan Makam</h1>
                <p class="mb-1 text-xs font-semibold text-center" >Waktu pemesanan : <%= order.Tanggal %></p>
                <p class="mb-5 text-xs font-semibold text-center">Status : <%= order.status %></p>

                <div class="p-2 m-2 font-semibold bg-white rounded">
                    <h3>Nomor Pesanan : <%= order.nomor_pesanan %></h3>
                    <h3>Jumlah Pembayaran : Rp. <%= order.jumlah_pembayaran %></h3>
                    <h3>Pembayaran : <%= order.Pembayaran %></h3>
                </div>
                <div class="px-4 py-2 m-2 font-semibold bg-white rounded">
                    <h2 class="text-base font-bold text-center">Data Pemesan</h2>
                    <h3 class="mb-1">Nama : <%= order.Data_Jenazah.nama %>
                    </h3>
                    <h3 class="mb-1">Email : <%= order.Masyarakat.email %>
                    </h3>
                    <h3 class="mb-1">Nomor Induk Penduduk : <%= order.Masyarakat.nomor_KTP %>
                    </h3>
                    <h3 class="mb-1">Jenis Kelamin : <%= order.Masyarakat.jenis_kelamin %>
                    </h3>
                    <h3 class="mb-1">Tempat Tanggal Lahir : <%= order.Masyarakat.tempat_lahir %>  <%= order.Masyarakat.tanggal_lahir %>
                    </h3>
                    <h3 class="mb-1">Pekerjaan : <%= order.Masyarakat.pekerjaan %>
                    </h3>
                    <h3 class="mb-1">No HP : <%= order.Masyarakat.no_HP %>
                    </h3>
                    </h3>
                    <h3 class="mb-2">Alamat : <%= order.Masyarakat.alamat %>
                    </h3>
                </div>
                <div class="px-4 py-2 m-2 font-semibold bg-white rounded">
                    <h2 class="text-base font-bold text-center">Data Jenazah</h2>
                    <h3 class="mb-1">Nama : <%= order.Data_Jenazah.nama %></h3>
                    <h3 class="mb-1">Nomor Induk Penduduk : <%= order.Data_Jenazah.NIK %></h3>
                    <h3 class="mb-1">Jenis Kelamin : <%= order.Data_Jenazah.jenis_kelamin %></h3>
                    <h3 class="mb-1">Tutup Usia : <%= order.Data_Jenazah.tutup_usia %></h3>
                    <h3 class="mb-1">Tanggal Meningal : <%= order.Data_Jenazah.tanggal_meninggal %></h3>
                    <h3 class="mb-1">Tanggal Dikebumikan : <%= order.Data_Jenazah.tanggal_dikebumikan %></h3>
                    <h3 class="mb-1">Kacamatan : <%= order.Data_Jenazah.Kacamatan.nama %></h3>
                    <h3 class="mb-1">Kelurahan : <%= order.Data_Jenazah.Kelurahan.nama %></h3>
                    <h3 class="mb-2">Alamat : <%= order.Data_Jenazah.alamat %></h3>
                </div>

                <div class="px-4 py-2 m-2 font-semibold bg-white rounded">
                    <h2 class="text-base font-bold text-center">Data Lahan Pemakaman</h2>
                    <h3 class="mb-1">Blok : <%= order.Blok.kode %>
                    </h3>
                    <h3 class="mb-1">Nomor : <%= order.Lahan_Makam.Nomor %>
                    </h3>
                    <h3 class="mb-1">Harga : Rp. <%= order.Lahan_Makam.harga %>
                    </h3>
                    <div class="items-center mt-5 mb-10 text-center">
                        <img class="w-full rounded" src="<%= order.Lahan_Makam.gambar %>" alt="poto berkas" srcset="">
                    </div>
                </div>

                

                <div class="px-4 py-2 m-2 text-xs font-semibold bg-white rounded">
                    <h2 class="h-full mb-3 text-base font-bold text-center">Berkas Jenazah</h2>
                    <div class="items-center mb-10 text-center">
                        <h3 class="mb-2 font-semibold">Poto Kartu Penduduk</h3>
                        <img class="w-full rounded" src="<%= order.Data_Jenazah.KTP %>" alt="poto berkas" srcset="">
                    </div>
                    <div class="mb-10 text-center">
                        <h3 class="mb-2 font-semibold">Poto Kartu Keluarga</h3>
                        <img class="w-full rounded" src="<%= order.Data_Jenazah.kartu_Kelaurga %>" alt="poto berkas" srcset="">
                    </div>
                    <div class="mb-10 text-center">
                        <h3 class="mb-2 font-semibold">Poto Kartu Kuning</h3>
                        <img class="w-full rounded" src="<%= order.Data_Jenazah.kartu_kuning %>" alt="poto berkas" srcset="">
                    </div>
                    <div class="mb-10 text-center ">
                        <h3 class="mb-2 font-semibold">Poto Surat Keterangan RT/RW</h3>
                        <img class="w-full rounded" src="<%= order.Data_Jenazah.surat_keterangan_RTRW %>" alt="poto berkas" srcset="">
                    </div>
                    <% if(order.Data_Jenazah.surat_keterangan_meninggal_RS) { %>
                    <div class="mb-10 text-center">
                        <h3 class="mb-2 font-semibold">Poto Surat Keterangan Meninggal Di Rumah Sakit</h3>
                        <img class="w-full rounded" src="<%= order.Data_Jenazah.surat_keterangan_meninggal_RS %>" alt="poto berkas" srcset="">
                    </div>
                    <% } %>
                    <div class="mb-10 text-center">
                        <h3 class="mb-2 font-semibold">Poto Kartu Penduduk Ahli Waris</h3>
                        <img class="w-full rounded" src="<%= order.Data_Jenazah.KTP_ahli_waris %>" alt="poto berkas" srcset="">
                    </div>
                    
                </div>

                <% if(order.status === 'Diterima' || order.status === 'Menunggu Pembayaran') { %>
                <div class="flex justify-center w-full h-12 py-2">
                    <button class="w-20 font-semibold bg-blue-600 rounded-md text-cyan-50 hover:bg-blue-700 hover:font-bold"
                        type="submit"><a href="/admin/list-order">Kembali</a></button>
                </div>
                <% } else { %>
                <div class="flex justify-center w-full h-12 py-2">
                    <button class="w-20 font-semibold bg-blue-600 rounded-md text-cyan-50 hover:bg-blue-700 hover:font-bold"
                        type="submit"><a href="/admin/confirm-order/<%= order.id %>">Terima</a></button>
                    <button class="w-20 ml-2 font-semibold bg-red-500 rounded-md text-cyan-50 hover:bg-red-700 hover:font-bold"
                        type="submit"><a href="/admin/rejected-order/<%= order.id %>">Tolak</a></button>
                </div>
                <% } %>
        </form>

        <%- include('../user/item/javascript.ejs') %>

    </body>

</html>