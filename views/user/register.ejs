<body>

    <body class="bg-white">
        <% if(alert.message !='' ) { %>
            <%- include('./item/message.ejs') %>
                <% } %>

        <form action="" method="post">
            <div class="mx-auto my-40 bg-slate-500 w-80 h-auto rounded-lg pt-5 px-10">
                <h1 class="font-bold text-center mb-5 ">Daftar</h1>
            
                <h1 class="font-semibold"> Nomor NIK</h1>
                <input type="text" placeholder="73000000000" name="NIK" class="rounded bg-gray-300 w-full px-1 py-1">
            
