                <input type="text" placeholder="contoh@gmail.com" name="email" class="rounded bg-gray-300 w-full px-1 py-1">
            
                <h1 class="font-semibold">Nama</h1>
                <input type="text" placeholder="agus suryadi" name="name" class="rounded bg-gray-300  w-full px-1 py-1">
            
                <h1 class="font-semibold">Kata Sandi</h1>
                <input type="password" name="password" class="rounded bg-gray-300  w-full px-1 py-1">
            
                <button
                    class="bg-blue-600 my-5 w-20 h-7 rounded-lg text-cyan-50 font-semibold mx-20 hover:bg-blue-700 hover:font-bold"
                    type="submit">Buat</button>
            </div>
        </form>

        <%- include('./item/javascript.ejs') %>

